{
  "name": "kropsaurus",
  "description": "Simple Screen Recorder",
  "scripts": {
    "prepare": "husky install",
    "build": "concurrently \"npm run build:main\" \"npm run build:renderer\"",
    "build:main": "cross-env NODE_ENV=production webpack --config ./.erb/configs/webpack.config.main.prod.babel.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./.erb/configs/webpack.config.renderer.prod.babel.js",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir src",
    "lint": "cross-env NODE_ENV=development eslint . --cache --ext .js,.jsx,.ts,.tsx",
    "package": "rm -rf src/dist && npm run build && electron-builder build --publish never",
    "release": "electron-builder --publish always",
    "postinstall": "node -r @babel/register .erb/scripts/CheckNativeDep.js && electron-builder install-app-deps && npx cross-env NODE_ENV=development webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.babel.js && opencollective-postinstall",
    "start": "node -r @babel/register ./.erb/scripts/CheckPortInUse.js && cross-env npm run start:renderer",
    "start:main": "cross-env NODE_ENV=development electron -r ./.erb/scripts/FixDevAppName.js -r ./.erb/scripts/BabelRegister ./src/main/main.dev.ts --inspect=5858 --remote-debugging-port=9223",
    "start:renderer": "cross-env NODE_ENV=development webpack serve --config ./.erb/configs/webpack.config.renderer.dev.babel.js",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=development eslint --cache"
    ],
    "{*.json,.{babelrc,eslintrc,prettierrc}}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{html,md,yml}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "build": {
    "productName": "Kropsaurus",
    "appId": "com.pineple.kropsaurus",
    "extraFiles": [],
    "files": [
      "package.json",
      "node_modules",
      "dist/",
      {
        "from": "ui/widgets/overlays",
        "to": "overlays",
        "filter": [
          "*.html"
        ]
      },
      {
        "from": "ui/widgets/ctrlpanel",
        "to": "ctrlpanel",
        "filter": [
          "*.html"
        ]
      },
      {
        "from": "ui/widgets/preferences",
        "to": "preferences",
        "filter": [
          "*.html"
        ]
      },
      {
        "from": "ui/widgets/progressdialog",
        "to": "progressdialog",
        "filter": [
          "*.html"
        ]
      },
      {
        "from": "ui/widgets/staticpage",
        "to": "staticpage",
        "filter": [
          "*.html"
        ]
      },
      {
        "from": "infrastructures/recorder/rec-delegate",
        "to": "rec-delegate",
        "filter": [
          "*.html"
        ]
      }
    ],
    "afterSign": ".erb/scripts/Notarize.js",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "This app requires microphone access to record audio."
      },
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "artifactName": "${productName}-${version}.${ext}",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "app": "src",
      "buildResources": "assets",
      "output": "release"
    },
    "extraResources": [
      "./assets/**",
      {
        "from": "node_modules/@ffmpeg/core/dist",
        "to": "ffmpegwasm-core",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": {
      "provider": "s3",
      "bucket": "kropsaurus",
      "path": "releases"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sangwonl/kropsaurus.git"
  },
  "author": {
    "name": "Pineple",
    "email": "support@pineple.com",
    "url": "https://pineple.com"
  },
  "contributors": [
    {
      "name": "gamz",
      "email": "gamz@gmail.com",
      "url": "https://github.com/sangwonl"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sangwonl/kropsaurus/issues"
  },
  "keywords": [
    "crop",
    "screen",
    "recorder",
    "capture"
  ],
  "homepage": "https://github.com/sangwonl/kropsaurus",
  "jest": {
    "testURL": "http://localhost/",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.erb/mocks/fileMock.js",
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "moduleDirectories": [
      "node_modules",
      "src/node_modules"
    ],
    "setupFiles": [
      "./.erb/scripts/CheckBuildsExist.js"
    ]
  },
  "devDependencies": {
